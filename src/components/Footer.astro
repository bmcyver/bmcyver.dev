---
import SocialIcons from '@/components/SocialIcons.astro'
import { Separator } from '@/components/ui/separator'
import { BENTO, SITE, SOCIAL_LINKS } from '@/consts'
---

<footer class="py-4">
  <div
    class="mx-auto flex max-w-3xl flex-col items-center justify-center gap-y-2 px-4 md:flex-row md:justify-between"
  >
    <div class="flex flex-col items-center text-center md:flex-row md:gap-x-2">
      <span class="text-muted-foreground text-sm">
        &copy; {new Date().getFullYear()}
        <a
          href={`https://github.com/${BENTO.GITHUB_USER_NAME}`}
          class="font-semibold hover:underline">{SITE.author}</a
        >. All rights reserved
      </span>
      <Separator orientation="vertical" className="hidden h-4! md:block" />
      <p class="text-muted-foreground text-sm">
        Built with <a
          href="https://github.com/jktrn/astro-erudite"
          class="font-semibold hover:underline">astro-erudite</a
        >
      </p>
    </div>
    <SocialIcons links={SOCIAL_LINKS} />
  </div>
</footer>
